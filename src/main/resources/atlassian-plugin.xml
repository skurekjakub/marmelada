        <resource type="static-resource"    name="assets/js/snackbar.js"                   location="com/k15t/scroll/scroll-webhelp-theme/scroll-html/js/snackbar.js"/ >
        
        <resource type="static-resource"    
            name="assets/js/theme.lightbox.js"
            location="com/k15t/scroll/scroll-webhelp-theme/scroll-html/js/theme.lightbox.js"/ >
